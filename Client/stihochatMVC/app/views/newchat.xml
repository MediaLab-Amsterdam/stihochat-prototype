<Alloy>
	<Window class="container" title="Nieuwe groep" id="newchatwin">
		<RightNavButton>
			<Button onClick="createChat">Aanmaken</Button>
		</RightNavButton>
		
		<View>
			<TableView id="newchattable">
				
				<TableViewSection headerTitle="Onderwerp">	
					<TableViewRow>
						<View>
							<TextField width="280" height="40"/>
						</View>
					</TableViewRow>
				</TableViewSection>	
				
				<TableViewSection headerTitle="Deelnemers">	
				</TableViewSection>	
				
				<TableViewSection>	
					<HeaderView >
						<View width="300" height="40">
							<Button width="300" title="Deelnemer toevoegen" class="coloredbutton" onClick="addParticipant"></Button>
						</View>
					</HeaderView>
				</TableViewSection>	
				
				
				<TableViewSection id="participants">	
				</TableViewSection>	
				
				
			</TableView>
		</View>
	</Window>
</Alloy>