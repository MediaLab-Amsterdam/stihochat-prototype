<Alloy>

	<Window class="container" title="Archief">
		
	
			<View id="searchtabsholder" onClick="toggleCategories">	
                <TabbedBar id="searchtabs">
                        <Labels>
                            <Label class="tab">Diensten</Label>
                            <Label class="tab">Producten</Label>
                        </Labels>
                </TabbedBar>
			</View>
	
			<TableView id="services" class="categories" onClick="openClusterArchive">
				
